extends /partials/page

block title
    title Vergilius Project | #{famname}
    -var selected = 'Kernels';
    -var i = 0;
block content
    extends /partials/page

    block title
        title Vergilius Project | #{arch}
        -var selected = 'Kernels';
        -var i = 0;
    block content
        .container.mainblock
            .row
                .col-md-12.breadcrumbs-col
                    nav(aria-label='breadcrumb')
                        ol.breadcrumb
                            li.breadcrumb-item
                                a.breadcrumb-link(href='/' tabindex='-1') > Home
                            li.breadcrumb-item
                                a.breadcrumb-link(href='/kernels' tabindex='-1') Kernels
                            li.breadcrumb-item
                                a.breadcrumb-link(href='/kernels/#{arch}' tabindex="-1") #{arch}
                            li.breadcrumb-item.active(aria-current='page') #{famname}
            .row
                .col-md-12
                    .container.mainblock-content(style="background-image: url(/images/newfam.png); background-color: #081120 !important;")
                        .row
                            .col-md-12
                                h2.text-center.maincap(style="margin-bottom: 0px;") #{famname}
                                .container
                                    .row.sm-timeline
                                        each a in fam
                                            if(i % 2 != 0)
                                                .col-sm-6(style="border: solid 0px blue")
                                                .col-sm-6(style="border: solid 0px blue")
                                                    .row
                                                        .col-sm-3.d-none.d-sm-block(style="border: solid 0px yellow")
                                                            .sm-timeline-image
                                                                a(href="/kernels/#{arch}/#{famname}/#{a.osname}" tabindex="-1")
                                                                    img.smcircle.img-arch(src='/images/mainpla.png', alt='')
                                                            if(i < fam.size() - 1)
                                                                .new-small-line-2.d-none.d-xl-block
                                                        .col-sm-9.family-col(style="border: solid 0px yellow")
                                                            a.fam-link(href="/kernels/#{arch}/#{famname}/#{a.osname}" tabindex="-1") #{a.family} #{a.osname}
                                                            //p.family
                                                                | build: #{a.buildnumber}
                                                                br
                                                                | date: #{a.convertTimestampToDate(a.timestamp)}
                                                            p.family
                                                                | build: #{a.buildnumber}
                                                            p.family
                                                                | date: #{a.convertTimestampToDate(a.timestamp)}
                                                            -var i=i+1
                                            else
                                                .col-sm-5(style="border: solid 0px red")
                                                .col-sm-7(style="border: solid 0px red")
                                                    .row
                                                        .col-sm-3.sm-min-col.d-none.d-sm-block(style="border: solid 0px green")
                                                            .sm-timeline-image
                                                                a(href="/kernels/#{arch}/#{famname}/#{a.osname}" tabindex="-1")
                                                                    img.smcircle.img-arch(src='/images/mainpla.png', alt='')
                                                            if(i < fam.size() - 1)
                                                                .new-small-line.d-none.d-xl-block
                                                        .col-sm-9.family-col.sm-min-col(style="border: solid 0px green")
                                                            a.fam-link(href="/kernels/#{arch}/#{famname}/#{a.osname}" tabindex="-1") #{a.family} #{a.osname}
                                                            //p.family
                                                                | build: #{a.buildnumber}
                                                                br
                                                                | date: #{a.convertTimestampToDate(a.timestamp)}
                                                            p.family
                                                                | build: #{a.buildnumber}
                                                            p.family
                                                                | date: #{a.convertTimestampToDate(a.timestamp)}
                                                            -var i=i+1



