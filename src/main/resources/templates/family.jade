extends /partials/page

block title
    title Vergilius Project
    -var selected = 'Family';
    -var i = 0;
block content
    .container
        .cmd
            ul.list-inline.breadcrumb(type='none')
                li.list-inline-item
                    | >
                    a(href='/' tabindex="-1")  Home
                li.list-inline-item
                    a(href='/kernels' tabindex="-1") Kernels
                li.list-inline-item #{famname}
    .container.indent
        .mainblock(style="background: url(/images/fambacke.jpg);")
            .col-lg-12(style="height: 655px;")
                h2.text-center(style="font-weight:900;") #{famname}
                ul.timeline(style="height: 85%;")
                    each a in fam
                        if(i % 2 != 0)
                            li.small_li
                                .timeline-image
                                    img.img-circle.img-responsive(src='/images/mainpla2.gif', alt='', width='75px', height='78px' style="position: relative;")
                                .timeline-panel.panel
                                    .timeline-heading(style="width: 100%; right: 0px;")
                                        h4(style="margin: 0px; text-align: left;")
                                            a(href="/os/#{a.osname}" class='listos' tabindex="-1") #{a.idopersys} #{a.osname}
                                if(i < fam.size() - 1)
                                    .smallline
                                -var i=i+1
                        else
                            li.timeline-inverted.small_li
                                .timeline-image
                                    img.img-circle.img-responsive(src='/images/mainpla2.gif', alt='', width='75px', height='78px' style="position: relative;")
                                .timeline-panel.panel
                                    .timeline-heading(style="width: 100%; right: 0px;")
                                        h4(style="margin: 0px; text-align: left;")
                                            a(href="/os/#{a.osname}" class='listos' tabindex="-1") #{a.idopersys} #{a.osname}
                                if(i < fam.size() - 1)
                                    .smallline
                                -var i=i+1
