extends /partials/page

block title
    title Vergilius Project
block content
    nav.site-header
        .site-header__container.header-sticky
            a.header-logo__image(href='/')
            ul.site-header__links
                li
                    a.header-link.active(href='/') Home
                li
                    a.header-link(href='/about') About
                li
                    a.header-link(href='/admin') Admin
    .container
        .cmd
            ul.list-inline.breadcrumb(type='none')
                li.list-inline-item
                    | >
                    a(href="/")  Home
                li.list-inline-item.active Admin
    .container
        .mainblock
            div(style='text-align:center;')
                if message
                    = message
            div
                a(href="/logout") Log out
            div
                form(method="post" enctype="multipart/form-data" action="/admin")
                    div(style='text-align:center;')
                        |Choose a file to upload:
                        label.btn.btn-default
                            input(type='file', name='file')
                    div(style='text-align:center;')
                        |Upload your file:
                        label.btn.btn-default
                            input(type='submit', value='Upload')
