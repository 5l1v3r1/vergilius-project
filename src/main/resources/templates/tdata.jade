extends /partials/page

block title
    title Vergilius Project
    -var selected = 'Kernels';
    -var a = 0;
block content
    .container
        .cmd
            ul.list-inline.breadcrumb(type='none')
                li.list-inline-item
                    | >
                    a(href="/" tabindex="-1")  Home
                li.list-inline-item
                    a(href="/kernels" tabindex="-1") Kernels
                li.list-inline-item
                    a(href="/kernels/#{arch}" tabindex="-1") #{arch}
                li.list-inline-item
                    a(href="/kernels/#{arch}/#{famname}" tabindex="-1") #{famname}
                li.list-inline-item
                    a(href="/kernels/#{arch}/#{famname}/#{osname}" tabindex="-1") #{osname}
                li.list-inline-item #{i.name}
    .container.indent
        .mainblock(style="min-height: 200px;")
            p(style="font-size:28px; font-weight:700; margin-bottom: 3px; margin-left: 10px;")
                | #{i.name}
            .row.bs-wizard(style='border-bottom:0;')
                if invertMapos[mapos[currOs] - 1] == null
                    .col-sm-4.bs-wizard-step.disabled
                        .text-center.bs-wizard-stepnum &nbsp; Previous
                        .progress
                            .progress-bar
                        a.bs-wizard-dot(href='#' tabindex="-1")
                else
                    .col-sm-4.bs-wizard-step.completed
                        .text-center.bs-wizard-stepnum
                            a.wizard-links(href='/kernels/#{invertMapos[mapos[currOs] - 1].getArch()}/#{invertMapos[mapos[currOs] - 1].getFamily()}/#{invertMapos[mapos[currOs] - 1].getOsname()}/#{i.name}' tabindex="-1") #{invertMapos[mapos[currOs] - 1].getFamily()} #{invertMapos[mapos[currOs] - 1].getOsname()} #{invertMapos[mapos[currOs] - 1].getArch()}
                        .progress
                            .progress-bar
                        a.bs-wizard-dot(href='/kernels/#{invertMapos[mapos[currOs] - 1].getArch()}/#{invertMapos[mapos[currOs] - 1].getFamily()}/#{invertMapos[mapos[currOs] - 1].getOsname()}/#{i.name}' tabindex="-1")
                .col-sm-4.bs-wizard-step.complete
                    // complete
                    .text-center.bs-wizard-stepnum
                        a.wizard-links(href='/kernels/#{invertMapos[mapos[currOs]].getArch()}/#{invertMapos[mapos[currOs]].getFamily()}/#{invertMapos[mapos[currOs]].getOsname()}/#{i.name}' tabindex="-1") #{invertMapos[mapos[currOs]].getFamily()} #{invertMapos[mapos[currOs]].getOsname()} #{invertMapos[mapos[currOs]].getArch()}
                    .progress
                        .progress-bar
                    a.bs-wizard-dot(href='/kernels/#{invertMapos[mapos[currOs]].getArch()}/#{invertMapos[mapos[currOs]].getFamily()}/#{invertMapos[mapos[currOs]].getOsname()}/#{i.name}' tabindex="-1")
                if invertMapos[mapos[currOs] + 1] == null
                    .col-sm-4.bs-wizard-step.disabled
                        // complete
                        .text-center.bs-wizard-stepnum &nbsp; Next
                        .progress
                            .progress-bar
                        a.bs-wizard-dot(href='#' tabindex="-1")
                else
                    .col-sm-4.bs-wizard-step.completed
                        // complete
                        .text-center.bs-wizard-stepnum
                            a.wizard-links(href='/kernels/#{invertMapos[mapos[currOs] + 1].getArch()}/#{invertMapos[mapos[currOs] + 1].getFamily()}/#{invertMapos[mapos[currOs] + 1].getOsname()}/#{i.name}' tabindex="-1") #{invertMapos[mapos[currOs] + 1].getFamily()} #{invertMapos[mapos[currOs] + 1].getOsname()} #{invertMapos[mapos[currOs] + 1].getArch()}
                        .progress
                            .progress-bar
                        a.bs-wizard-dot(href='/kernels/#{invertMapos[mapos[currOs] + 1].getArch()}/#{invertMapos[mapos[currOs] + 1].getFamily()}/#{invertMapos[mapos[currOs] + 1].getOsname()}/#{i.name}' tabindex="-1")
            script(type='text/javascript').
                (function () {
                    new Clipboard('#copy-button');
                })();
            #outer(style="min-height: 300px;")
                //escaping, changed from "#"
                pre(style="margin-bottom: 0px; min-height: 300px;")
                    code(class="c" style="min-height: 300px;")
                        button#copy-button.button(data-clipboard-target='#copyblock' tabindex="-1" data-clipboard-action="copy").btn-info copy
                        if(ttype == null)
                            .nothing
                                |Such structure doesn't exist in chosen version of the kernel...
                                |Or we just have forgotten to add it to our database.
                        else
                            div#copyblock(style="min-height: 200px;") !{ttype}
        if(cros != null)
            .maincross(style="min-height: 140px;")
                h4(style="font-weight:800; padding-left: 10px; color:#1CC1CC;") Used in ...
                div(style="padding-left: 20px;")
                    ul(type='none')
                        li
                            for i in cros
                                a.related(class='listos' href="/kernels/#{arch}/#{famname}/#{osname}/#{i}" tabindex="-1") #{i}
                                if(a != cros.size() - 1)
                                    - var a = a + 1
                                    | ,&nbsp;


