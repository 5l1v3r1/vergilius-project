extends /partials/page

block title
    title Vergilius Project
block content
    nav.site-header
        .site-header__container.header-sticky
            a.header-logo__image(href='/')
            ul.site-header__links
                li
                    a.header-link(href='/') Home
                li
                    .dropdown
                        button.dropbtn
                            a.header-link(href='/kernels') Kernels
                        .dropdown-content
                            ul(type='none')
                                for i in os
                                    li: p
                                        a.drp(href="/os/#{i.osname}") #{i.idopersys} #{i.osname}
                li
                    a.header-link(href='/statistics') Statistics
                li
                    a.header-link(href='/about') About
                li
                    a.header-link(href='/admin') Admin
    .container
        .cmd
            ul.list-inline.breadcrumb(type='none')
                li.list-inline-item
                    | >
                    a(href="/")  Home
                li.list-inline-item
                    a(href="/kernels") Kernels
                li.list-inline-item
                    a(href="/os/#{osname}") #{osname}
                li.list-inline-item #{i.name}
    .container.indent
        .mainblock
            p(style="font-size:28px; font-weight:700")
                |#{i.name}
                //button#copy-button.button(data-clipboard-target='#copyblock').btn-info copy
            script(type='text/javascript').
                (function () {
                    new Clipboard('#copy-button');
                })();
            #copyblock222
                //escaping, changed from "#"
                pre
                    code(class="c")
                        button#copy-button.button(data-clipboard-target='#copyblock').btn-info copy
                        div#copyblock !{ttype}